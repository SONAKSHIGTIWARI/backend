<%- include("./includes/header.ejs") %>

<div class="container-fluid entry-bg d-flex align-items-center justify-content-center min-vh-100">
  <div class="container">
    <div class="entry-card p-5 rounded shadow-lg bg-dark bg-opacity-75 text-white">
      <form class="entry-form" action="/enter-chat" method="post">
        <h1 class="text-center mb-4 animate-title">Welcome in<span class="text-info">ChatRoom</span></h1>
        
        <div class="mb-3">
          <input name="name" class="form-control form-control-lg rounded-pill shadow-sm input-focus" 
                 placeholder="Enter your name..." type="text" required>
        </div>

        <div class="text-center">
          <button class="btn btn-info btn-lg px-5 py-2 rounded-pill fw-semibold entry-btn shadow">
            Join <i class="fas fa-arrow-right ms-2"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

